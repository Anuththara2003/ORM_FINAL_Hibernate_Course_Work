<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="mainPane" prefHeight="500.0" prefWidth="666.0"
            xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.assignment.orm.service.orm_final_course_work_health_care.Controllers.AssignProgramController"
            stylesheets="@../Style/AssignProgram.css">

    <children>
        <!-- Header -->
        <Label layoutX="30.0" layoutY="30.0" styleClass="header-label" text="Assign Program" />

        <!-- Patient Selection Section -->
        <VBox layoutX="30.0" layoutY="93.0" spacing="10.0">
            <children>
                <Label styleClass="section-title" text="Select Patient" />

                <HBox spacing="20.0">
                    <children>
                        <Label text="Patinet Name:" />
                        <ComboBox fx:id="cmbPatientName" onAction="#cmbPatientNameOnAction"
                                  prefHeight="30.0" prefWidth="150.0" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Program Selection Section -->
        <VBox layoutX="30.0" layoutY="180.0" spacing="10.0">
            <children>
                <Label styleClass="section-title" text="Select Program" />

                <HBox spacing="20.0">
                    <children>
                        <Label text="Program Name:" />
                        <ComboBox fx:id="cmbProgramName" onAction="#cmbProgramNameOnAction"
                                  prefHeight="30.0" prefWidth="200.0" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Action Buttons -->
        <HBox layoutX="30.0" layoutY="280.0" spacing="15.0">
            <children>
                <Button fx:id="btnAssign" mnemonicParsing="false" onAction="#btnAssignOnAction"
                        prefHeight="35.0" prefWidth="100.0" text="Assign" />

                <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#btnDeleteOnAction"
                        prefHeight="35.0" prefWidth="100.0" text="Delete" />
            </children>
        </HBox>

        <!-- Table -->
        <TableView fx:id="tblAssignments" layoutX="30.0" layoutY="336.0"
                   onMouseClicked="#tblAssignmentsOnMouseClicked"
                   prefHeight="144.0" prefWidth="540.0">
            <columns>
                <TableColumn fx:id="colPatientId" prefWidth="123.0" text="Patient ID" />
                <TableColumn fx:id="colProgramId" prefWidth="145.0" text="Program ID" />
                <TableColumn fx:id="colProgramName" prefWidth="270.0" text="Program Name" />
            </columns>
        </TableView>

        <!-- Program ID Display -->
        <HBox layoutX="420.0" layoutY="215.0" spacing="20.0">
            <children>
                <Label text="Program ID:" />
                <Label fx:id="lbProgramId" prefHeight="20.0" prefWidth="117.0" styleClass="data-label" />
            </children>
        </HBox>

        <!-- Patient ID Display -->
        <HBox layoutX="397.0" layoutY="131.0" spacing="20.0">
            <children>
                <Label text="Patient ID" />
                <Label fx:id="lbPatientId" prefHeight="20.0" prefWidth="139.0" styleClass="data-label" />
            </children>
        </HBox>
    </children>
</AnchorPane>